<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">



    <!-- 🔹 Title at Top -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="প্রাথমিক স্বাস্থ্য সেবা"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="30dp"
        android:gravity="center" />

    <!-- 🔹 First Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFirst"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="স্বাস্থ্য সেবা"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/purple_500"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_health"
        app:iconGravity="start"
        app:iconTint="@color/white" />

    <!-- 🔹 Second Button -->

    <!-- 🔹 Third Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecond"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:text="ডাক্তার পরামর্শ"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/black"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_doctor"
        app:iconGravity="start"
        app:iconTint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnThird"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ওষুধের তথ্য"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/teal_700"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_medicine"
        app:iconGravity="start"
        app:iconTint="@color/white" />

    <!-- 🔹 Fourth Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFourth"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="জরুরি নম্বর"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/red"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_emergency"
        app:iconGravity="start"
        app:iconTint="@color/white" />

    <!-- 🔹 Fifth Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFifth"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="হাসপাতালের তালিকা"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_hospital"
        app:iconGravity="start"
        app:iconTint="@color/white" />

</LinearLayout>
